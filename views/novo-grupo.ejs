<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nomePagina %></h1>

    <form class="default-form" action="/novo-grupo" method="POST">
        <div class="campo">
            <label>Nome</label>
            <input type="text" name="nome" placeholder="Nome Grupo">
        </div>

        <div class="campo descripcion">
            <label>Descrição</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcao">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoria</label>
            <select name="categoria">
                <option value=""selected disabled>--Escolha uma categoria--</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%=categoria.id %>"><%= categoria.nome %></option>


                <% }) %>    
            </select>
        </div>
        <div class="campo">
            <label>Imagem</label>
            <input type="file" name="imagem">
        </div>
        <div class="campo">
            <label>Site web</label>
            <input type="url" name="url" placeholder="Site Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Criar Grupo" class="btn btn-rosa">

        </div>

    </form>    
</main>
       